<AnchorPane prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.ReceiptController">
   <children>
      <ImageView fitHeight="600.0" fitWidth="600.0">
         <image>
            <Image url="@../../../../../Images/Picture10.png" />
         </image>
      </ImageView>
      <TableView fx:id="billTable" layoutX="22.0" layoutY="87.0" prefHeight="265.0" prefWidth="291.0">
        <columns>
          <TableColumn fx:id="itemBill" prefWidth="168.0" text="Items" />
          <TableColumn fx:id="priceBill" minWidth="0.0" prefWidth="121.0" text="Price" />
        </columns>
      </TableView>
      <Label layoutX="28.0" layoutY="44.0" prefHeight="32.0" prefWidth="259.0" text="Selected Items for Purchase">
         <font>
            <Font name="System Bold Italic" size="14.0" />
         </font>
      </Label>
      <Label layoutX="411.0" layoutY="132.0" prefHeight="39.0" prefWidth="84.0" text="Total Bill">
         <font>
            <Font name="System Bold Italic" size="14.0" />
         </font>
      </Label>
      <Label fx:id="finalBill" layoutX="377.0" layoutY="186.0" prefHeight="114.0" prefWidth="129.0">
         <font>
            <Font name="System Bold" size="48.0" />
         </font>
      </Label>
      <TextField fx:id="creditNo" layoutX="36.0" layoutY="390.0" prefHeight="30.0" prefWidth="399.0" promptText="Enter Credit Card no" />
      <Button layoutX="158.0" layoutY="548.0" mnemonicParsing="false" onAction="#submitBill" prefHeight="24.0" prefWidth="119.0" text="Submit">
         <font>
            <Font name="System Bold Italic" size="14.0" />
         </font>
      </Button>
      <ImageView fitHeight="54.0" fitWidth="71.0" layoutX="335.0" layoutY="125.0">
         <image>
            <Image url="@../../../../../Images/bill.png" />
         </image>
      </ImageView>
      <TextField fx:id="mblNo" layoutX="34.0" layoutY="446.0" prefHeight="32.0" prefWidth="399.0" promptText="Enter Mobile no" />
      <TextField fx:id="address" layoutX="34.0" layoutY="499.0" prefHeight="30.0" prefWidth="399.0" promptText="Enter Address" />
      <Button layoutX="481.0" layoutY="31.0" mnemonicParsing="false" onAction="#LogOut" prefHeight="25.0" prefWidth="71.0" text="Log out" textFill="#793333">
         <font>
            <Font name="System Bold Italic" size="14.0" />
         </font>
      </Button>
      <Button layoutX="48.0" layoutY="19.0" mnemonicParsing="false" onAction="#goToPrevious" prefHeight="25.0" prefWidth="153.0" text="Go to previous page" textFill="#793b3b">
         <font>
            <Font name="System Bold Italic" size="14.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
